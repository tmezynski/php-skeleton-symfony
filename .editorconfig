# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# Tab indentation (no size specified) for JavaScript files
[*.js]
indent_style = tab

# Override for Makefiles, which require tabs
[Makefile]
indent_style = tab

# YAML files use 2 spaces for indentation
[*.yml]
indent_style = space
indent_size = 4
